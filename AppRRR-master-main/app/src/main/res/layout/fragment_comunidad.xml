<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comunidad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comunidad"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/include"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <!-- Comentario 1 -->
        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_person_24"
            app:layout_constraintTop_toBottomOf="@id/textView15"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepito:"
            app:layout_constraintTop_toTopOf="@id/imageView12"
            app:layout_constraintStart_toEndOf="@id/imageView12"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hice un intercambio de plástico para mi mini pyme con el usuario Ramón gracias a esta app"
            app:layout_constraintTop_toBottomOf="@id/textView17"
            app:layout_constraintStart_toStartOf="@id/textView17"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoración: *****"
            app:layout_constraintTop_toBottomOf="@id/textView16"
            app:layout_constraintStart_toStartOf="@id/textView17" />

        <!-- Comentario 2 -->
        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_person_24"
            app:layout_constraintTop_toBottomOf="@id/textView18"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esteban:"
            app:layout_constraintTop_toTopOf="@id/imageView18"
            app:layout_constraintStart_toEndOf="@id/imageView18"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hoy se realizará una feria sobre las RRR, en la plaza de armas"
            app:layout_constraintTop_toBottomOf="@id/textView20"
            app:layout_constraintStart_toStartOf="@id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoración: *****"
            app:layout_constraintTop_toBottomOf="@id/textView19"
            app:layout_constraintStart_toStartOf="@id/textView20" />

        <!-- Comentario 3 -->
        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_person_24"
            app:layout_constraintTop_toBottomOf="@id/textView29"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flora:"
            app:layout_constraintTop_toTopOf="@id/imageView19"
            app:layout_constraintStart_toEndOf="@id/imageView19"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hoy hice una reducción de ropa y la dejé en un punto de acercamiento para la mini pyme Clínica de Ropa, que está recaudando ropa para restaurar y darle nueva funcionalidad"
            app:layout_constraintTop_toBottomOf="@id/textView24"
            app:layout_constraintStart_toStartOf="@id/textView24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoración: *****"
            app:layout_constraintTop_toBottomOf="@id/textView23"
            app:layout_constraintStart_toStartOf="@id/textView24" />

        <!-- Botones de acción -->
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btningresarcomentario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btneliminarcomentario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
